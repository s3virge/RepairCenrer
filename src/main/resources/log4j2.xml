<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="ConsoleError" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="logFile" fileName="target/root.log">
            <PatternLayout pattern="%d %p %c{1.} [%t] %m%n"/>
        </File>

        <File name="logFile2" fileName="target/packege.core.log">
            <PatternLayout pattern="%d %p %c{1.} [%t] %m%n"/>
        </File>
    </Appenders>

    <Loggers>

        <Logger name="core" additivity="false" level="trace">
            <AppenderRef ref="ConsoleError" />
            <AppenderRef ref="logFile2" />
        </Logger>

        <Root level="trace">
            <AppenderRef ref="ConsoleError"/>
            <AppenderRef ref="logFile" />
        </Root>
    </Loggers>
</Configuration>