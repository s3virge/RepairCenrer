<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="filename">target/repaircenter.log</Property>
    </Properties>

    <Appenders>

        <Console name="ConsoleError" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] (%-5level) line:%L %logger{36} - %msg%n"/>
        </Console>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{ABSOLUTE}}{black} %highlight{[%5p] line:%L %c{1} -> %m%n}"/>
            <!--<PatternLayout pattern="%highlight{%d [%t] %-5level: %msg%n%throwable}"/>-->
        </Console>

        <File name="logFile" fileName="${filename}" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] (%-5level) line:%L %logger{36} - %msg%n"/>
        </File>

        <!--<File name="logFile2" fileName="target/packege.app.core.log">-->
            <!--<PatternLayout pattern="%d %p %c{1.} [%t] %m%n"/>-->
        <!--</File>-->
    </Appenders>

    <Loggers>

        <!--<Logger name="app.core" additivity="false" level="trace">-->
            <!--<AppenderRef ref="ConsoleError" />-->
            <!--<AppenderRef ref="logFile2" />-->
        <!--</Logger>-->

        <Root level="ALL">
            <!--<AppenderRef ref="ConsoleError"/>-->
            <AppenderRef ref="Console"/>
            <AppenderRef ref="logFile" />
        </Root>
    </Loggers>
</Configuration>